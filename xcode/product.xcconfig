// Configuration for Xcode 6.1

// Linking
TAKRAM_OTHER_LDFLAGS = $(inherited) -lgflags -lglog

// Search Paths
ALWAYS_SEARCH_USER_PATHS = NO
TAKRAM_HEADER_SEARCH_PATHS = $(inherited) "$(SRCROOT)/include" "$(SRCROOT)/build/gflags/include" "$(SRCROOT)/build/glog/include"
TAKRAM_LIBRARY_SEARCH_PATHS = $(inherited) "$(SRCROOT)/build/gflags/lib" "$(SRCROOT)/build/glog/lib"
